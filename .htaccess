Options -Indexes
<FilesMatch "\.(log)">
Deny from all
</fileSMatch>
<FilesMatch "config.php">
    Deny from all
</fileSMatch>
<FilesMatch "init.php">
    Deny from all
</fileSMatch>
RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule (.*) index.php/$1 [QSA]